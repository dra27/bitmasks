  Title: API reference for BitMasks
  Type: ocamlbuild (0.4)
  BuildTools+: ocamldoc
  InstallDir: $htmldir/bitmasks
  XOCamlbuildPath: .
  XOCamlbuildLibraries: bitmasks
  XOCamlbuildExtraArgs: -docflags -stars,-colorize-code
